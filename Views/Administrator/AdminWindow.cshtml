@model WebApplication1.Models.Administrator

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f0f4f8; /* Soft background color for consistency */
        color: #333;
    }
    .admin-profile-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        text-align: left;
    }
    .admin-profile-container h1 {
        text-align: center;
        font-size: 2rem;
        color: #333;
        margin-bottom: 20px;
    }
    .admin-profile-container p {
        font-size: 1.1rem;
        margin: 10px 0;
    }
    .admin-profile-container strong {
        color: #4CAF50;
    }
</style>

<div class="admin-profile-container">
    <h1>Bine ati venit</h1>
    <p><strong>ID:</strong> @Model.AdministratorID</p>
    <p><strong>Nume:</strong> @Model.Nume</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

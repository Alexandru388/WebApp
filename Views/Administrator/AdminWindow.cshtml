@model WebApplication1.Models.Administrator

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Window</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1 class="text-center">Admin Dashboard</h1>

    @if (Model != null)
    {
        <div class="card mt-4">
            <div class="card-header bg-primary text-white">
                <h4>Administrator Details</h4>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> @Model.AdministratorID</p>
                <p><strong>Name:</strong> @Model.Nume</p>
                <p><strong>Email:</strong> @Model.Email</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4" role="alert">
            Administrator details are not available.
        </div>
    }

    <a href="/" class="btn btn-secondary mt-3">Logout</a>
</div>
</body>
</html>
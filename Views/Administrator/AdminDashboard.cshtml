@model WebApplication1.Models.Student

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1 class="text-center">Add a New Student</h1>

    <form asp-action="AddStudent" method="post" class="mt-4">
        <div class="mb-3">
            <label for="Nume" class="form-label">Name</label>
            <input type="text" class="form-control" id="Nume" name="Nume" required>
        </div>
        <div class="mb-3">
            <label for="CNP" class="form-label">CNP</label>
            <input type="text" class="form-control" id="CNP" name="CNP" required>
        </div>
        <div class="mb-3">
            <label for="NumarMatricol" class="form-label">Registration Number</label>
            <input type="text" class="form-control" id="NumarMatricol" name="NumarMatricol" required>
        </div>
        <div class="mb-3">
            <label for="NotaCazare" class="form-label">Housing Grade</label>
            <input type="number" step="0.01" class="form-control" id="NotaCazare" name="NotaCazare" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Student</button>
    </form>
</div>
</body>
</html>


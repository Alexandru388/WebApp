@model IEnumerable<WebApplication1.Models.StudentViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; margin-top: 20px;">Lista Studentilor</h2>

<table style="width: 80%; margin: 20px auto; border-collapse: collapse; border: 1px solid #ddd;">
    <thead>
    <tr style="background-color: #f4f4f4;">
        <th style="padding: 10px; text-align: left;">Nume Student</th>
        <th style="padding: 10px; text-align: left;">CNP</th>
        <th style="padding: 10px; text-align: left;">Numar Matricol</th>
        <th style="padding: 10px; text-align: left;">Nota Cazare</th>
    </tr>
</table>

<tbody>
@foreach (var student in Model)
{
<tr>
    <td style="padding: 10px;">@student.Nume</td>
    <td style="padding: 10px;">@student.CNP</td>
    <td style="padding: 10px;">@student.NumarMatricol</td>
    <td style="padding: 10px;">@student.NotaCazare</td>
</tr>
}
</tbody>
 
<div style="text-align: center; margin-top: 20px;">
    <a asp-action="AddStudentDashboard" asp-controller="AddStudent" style="text-decoration: none;">
        <button style="padding: 10px 20px; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;">
            Înapoi la formularul de adăugare student
        </button>
    </a>
</div>
@model WebApplication1.Models.StudentViewModel

<h2 style="text-align: center;">Adăugare Student</h2>

<div>
    <form asp-action="Create" method="post">
        <div>
            <label>Nume Student</label>
            <input asp-for="Nume" class="form-control" />
            <span asp-validation-for="Nume" class="text-danger"></span>
        </div>

        <div>
            <label>CNP</label>
            <input asp-for="CNP" class="form-control" />
            <span asp-validation-for="CNP" class="text-danger"></span>
        </div>

        <div>
            <label>Număr Matricol</label>
            <input asp-for="NumarMatricol" class="form-control" />
            <span asp-validation-for="NumarMatricol" class="text-danger"></span>
        </div>

        <div>
            <label>Nota Cazare</label>
            <input asp-for="NotaCazare" class="form-control" />
            <span asp-validation-for="NotaCazare" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Adaugă Student</button>
    </form>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

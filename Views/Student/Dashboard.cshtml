@model List<WebApplication1.Models.CazareInfo>

<h2 class="text-center">Informații Cazare</h2>

<!-- Tabelul cu stiluri îmbunătățite -->
<div class="table-container" style="max-width: 900px; margin: 0 auto; padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <table class="table" style="width: 100%; border-collapse: collapse; background-color: #ffffff;">
        <thead>
        <tr style="background-color: #4CAF50; color: white;">
            <th style="padding: 12px; text-align: left;">Nume Cămin</th>
            <th style="padding: 12px; text-align: left;">Număr Cameră</th>
            <th style="padding: 12px; text-align: left;">Număr Colegi</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr style="border-bottom: 1px solid #ddd;">
                <td style="padding: 12px;">@item.NumeCamin</td>
                <td style="padding: 12px;">@item.NumarCamera</td>
                <td style="padding: 12px;">@item.NumarColegi</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!-- Stiluri pentru îmbunătățirea aspectului general -->
<style>
    /* Stiluri generale pentru pagină */
    body {
        background-color: #f4f4f9; /* Fundal deschis pentru întreaga pagină */
        font-family: Arial, sans-serif;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333; /* Culoare închisă pentru titlu */
    }

    /* Stiluri pentru tabel */
    .table-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }
</style>

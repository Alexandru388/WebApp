@model IEnumerable<WebApplication1.Models.Camin>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista Căminelor Ordonată Alfabetic</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f9; /* Set background color for the page */
        }

        h2 {
            text-align: center;
            margin-top: 20px;
            color: #333;
        }

        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for the table */
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
            color: #333;
        }

        th {
            background-color: #4CAF50; /* Green background for table headers */
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9; /* Light grey for even rows */
        }

        tr:hover {
            background-color: #f1f1f1; /* Light hover effect for rows */
        }

        .btn-back {
            padding: 10px 20px;
            background-color: #e74c3c; /* Muted red */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-back:hover {
            background-color: red;
        }
    </style>
</head>
<body>

<h2>Lista Căminelor Ordonată Alfabetic</h2>

<table>
    <thead>
        <tr>
            <th>Nume Cămin</th>
            <th>Adresă</th>
            <th>Număr Camere</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var camin in Model)
        {
            <tr>
                <td>@camin.Nume</td>
                <td>@camin.Adresa</td>
                <td>@camin.NumarCamere</td>
            </tr>
        }
    </tbody>
</table>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="CaminDashboard" asp-controller="Camine" style="text-decoration: none;">
        <button class="btn-back">
            Înapoi la pagina principală
        </button>
    </a>
</div>

</body>
</html>
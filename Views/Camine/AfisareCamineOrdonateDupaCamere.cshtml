@model IEnumerable<WebApplication1.Models.CaminViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cămine Ordonate</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
<h1>Cămine Ordonate după Numărul de Camere Disponibile</h1>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Nume Cămin</th>
        <th>Adresă</th>
        <th>Număr Camere Disponibile</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var camin in Model)
    {
        <tr>
            <td>@camin.CaminID</td>
            <td>@camin.Nume</td>
            <td>@camin.Adresa</td>
            <td>@camin.CamereLibere</td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>